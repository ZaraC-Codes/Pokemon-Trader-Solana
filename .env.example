# Program ID (must match POKEBALL_GAME_PROGRAM_ID above)
VITE_POKEBALL_GAME_PROGRAM_ID=B93VJQKD5UW8qfNsLrQ4ZQvTG6AG7PZsR6o2WeBiboBZ

# SolCatch token mint (must match SOLBALLS_MINT above)
VITE_SOLBALLS_MINT=your_solballs_mint_pubkey

# USDC mint (must match USDC_MINT above)
VITE_USDC_MINT=Gh9ZwEmdLJ8DscKNTkTqPbNwLNNBjuSzaG9Vp2KGtKJr

# ============================================================
# FRONTEND — WALLET & UI CONFIG
# ============================================================

