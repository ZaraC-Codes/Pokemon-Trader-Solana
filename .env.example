# ============================================================
# TOKEN ADDRESSES (ApeChain Mainnet)
# ============================================================

# USDC.e token
VITE_USDC_ADDRESS=0xF1815bd50389c46847f0Bda824eC8da914045D14

# WAPE (Wrapped APE) - Note: APE is native token, no contract needed
VITE_WAPE_ADDRESS=0x48b62137EdfA95a428D35C09E44256a739F6B557

# ============================================================
# THIRDWEB CONFIG (Multi-chain support)
# ============================================================

# Get from: https://thirdweb.com/dashboard → Settings → API Keys
# Leave blank if not using cross-chain funding widget
VITE_THIRDWEB_CLIENT_ID=your_thirdweb_client_id

# ============================================================
# CUSTOM WALLET CONFIG (dGen1 EthereumPhone & Glyph)
# ============================================================

# ERC-4337 Bundler URL for dGen1 EthereumPhone transactions
# REQUIRED for dGen1 devices to send transactions on ApeChain!
# The dGen1 uses ERC-4337 Account Abstraction which requires a bundler.
# Without this, approvals and purchases will fail silently on dGen1.
#
# Get a free API key from: https://dashboard.pimlico.io
# Or use another ERC-4337 bundler that supports ApeChain (chain 33139)
VITE_BUNDLER_RPC_URL=https://api.pimlico.io/v2/33139/rpc?apikey=your_pimlico_key

# Glyph Wallet API key (if required by SDK)
# Leave blank unless Glyph SDK requires it
VITE_GLYPH_API_KEY=your_glyph_api_key

# ============================================================
# APECHAIN NETWORK CONFIG
# ============================================================

# Chain ID for ApeChain Mainnet
VITE_APECHAIN_CHAIN_ID=33139

# Optional: Alchemy API key (for RPC fallback)
# If not provided, uses public RPC_URL provided
VITE_ALCHEMY_API_KEY=U6nPHGu_q380fQMfQRGcX

# ============================================================
# BLOCK EXPLORER (Optional)
# ============================================================

# Apescan API key for block explorer queries
# Leave blank if not using Apescan lookups
APESCAN_API_KEY=your_apescan_api_key

# ============================================================
# GASLESS THROWS CONFIG (v1.8.0)
# ============================================================

# Dev mode: use direct throwBall() instead of relayer
# Set to 'true' for local testing without a relayer
# When true, player pays Entropy fee directly (~0.073 APE)
VITE_GASLESS_DEV_MODE=false

# Relayer API URL for gasless throws (production)
# Deploy the relayer from /relayer folder, then set URL here
# For local testing without a relayer, set VITE_GASLESS_DEV_MODE=true
VITE_RELAYER_API_URL=https://pokeball-relayer.YOUR_SUBDOMAIN.workers.dev

# ============================================================
# TOUCH CONTROLS CONFIG
# ============================================================

# Touch control mode: 'tap' (tap to move) or 'dpad' (virtual d-pad)
VITE_TOUCH_CONTROL_MODE=tap

# Force touch controls on desktop (for testing)
VITE_FORCE_TOUCH_CONTROLS=false

# ============================================================
# Hardhat Deployment Config
# ============================================================

# Private key for contract deployments (keep secret!)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key

# Owner wallet (controls contract upgrades, admin functions)
HARDHAT_OWNER_WALLET=your_owner_wallet_address

# Treasury wallet (receives platform fees)
HARDHAT_TREASURY_WALLET=your_treasury_wallet_address

# NFT Revenue wallet (legacy, can be same as treasury)
HARDHAT_NFT_REVENUE_WALLET=your_revenue_wallet_address